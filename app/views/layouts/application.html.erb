<!DOCTYPE html>
<html>
  <head>
    <title>TodoMvc</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <br>
    
    <div class='container'>
      <%= link_to 'Главная страница', root_path, class: 'btn btn-secondary' %>
      <%= link_to 'Главная страница админки', admin_root_path, class: 'btn btn-secondary' if admin? %>
    </div>
    
    <hr>
    <%= yield %>
  </body>
</html>
